* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
}

/* NAVBAR */
header {
    background: #111;
    color: #fff;
    padding: 15px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

header h1 {
    color: #ff4081;
}

nav a {
    color: #fff;
    margin-left: 20px;
    text-decoration: none;
}

nav a:hover {
    color: #ff4081;
}

/* HERO */
.hero {
    background: linear-gradient(to right, #ff4081, #ff9800);
    color: #fff;
    text-align: center;
    padding: 80px 20px;
}

.hero h2 {
    font-size: 36px;
}

.hero p {
    margin: 15px 0;
}

.hero button {
    padding: 12px 25px;
    border: none;
    background: #111;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
}

.hero button:hover {
    background: #333;
}

/* CONCERT SECTION */
.concerts {
    padding: 50px;
    text-align: center;
}

.concert-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin-top: 30px;
}

.card {
    background: #fff;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    border-radius: 10px;
    overflow: hidden;
}

.card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
}

.card h3 {
    margin: 15px 0 5px;
}

.card p {
    margin: 5px 0;
}

.price {
    font-weight: bold;
    color: #ff4081;
}

.card button {
    margin: 15px 0 20px;
    padding: 10px 20px;
    background: #ff4081;
    border: none;
    color: #fff;
    cursor: pointer;
}

.card button:hover {
    background: #e73370;
}

/* FOOTER */
footer {
    background: #111;
    color: #fff;
    padding: 15px;
    text-align: center;
}
